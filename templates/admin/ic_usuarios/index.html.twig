{% extends 'layout.html.twig' %}

{% block title %}Usuarios {% endblock %}

{% block content %}

    <div class="row">

        <div class="col-md-10 col-md-offset-1">
            <h1>Usuarios</h1>
            <table class="table">
                <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Estatus</th>
                    <th>Roles</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.Username }}</td>
                        <td>{{ user.Email }}</td>
                        <td>{{ user.Enabled ? 'Activo' : 'Baja'  }}</td>
                        <td>
                            <a class="btn btn-md btn-mdb-color"
                               href="#">Editar</a>
                        </td>
                        <td>

                            <a class="btn btn-md btn-mdb-color"
                               href="{{ path('procesos_perfil_modificar', { 'idPerfil': user.Id }) }}">Perfil</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
