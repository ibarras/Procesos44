{% extends 'base.html.twig' %}
{% block title %} Areas Club Tijuana{% endblock %}

{% block content %}

    <div class="row">

        <div class="col-md-10 col-md-offset-1">

            <div class="panel-heading">
                <a href="{{ path('procesos_area_agregar') }}">  <button type="button"  class="btn btn-md btn-primary">Nuevo Registro de &aacute;rea</button></a>
{#                <a class="btn btn-default" href="{{ path('procesos_area_pdf') }}"><em class="fa fa-file-pdf-o" title="Imprimir"></em></a>#}
{#                <a class="btn btn-default" href="{{ path('procesos_area_csv') }}"><em class="fa fa-file-excel-o" title="Exportar a Excel"></em></a>#}

            </div>

            <div class="panel-body table-responsive">
                <table class="table table-striped table-bordered table-list">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Tel√©fono</th>
                        <th>Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for icArea in ic_areas %}
                        <tr>
                            <td>{{ icArea.idArea }}</td>
                            <td>{{ icArea.nombre }}</td>
                            <td>{{ icArea.correo }}</td>
                            <td>{{ icArea.telefono }}</td>
                            <td>
                                <div>
                                        <a class="btn btn-md btn-mdb-color" href="{{ path('procesos_area_modificar', { 'idArea': icArea.idArea }) }}">
                                            <span class="fa fa-edit "></span>Editar</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="row">
                <div class="col-5" id="file">
                    <div class="large-12 medium-12 small-12 cell">
                        <label>File
                            <input type="file" id="file" ref="file" v-on:change="handleFileUpload()"/>
                        </label>
                        <button v-on:click="submitFile()">Submit</button>
                    </div>
                </div>
            </div>

        </div>
    </div>

{% endblock %}

