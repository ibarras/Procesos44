{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">

        <div class="col-sm-10">
            <div class="card">
                <div class="card-header">
                    <h3>Macro Procesos</h3>
                </div>

                <div class="card-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for procedimiento in procedimientos %}
                            <tr>
                                <td>{{ procedimiento.title |capitalize}}</td>
                                <td>
                                    <div class="btn-group">
                                        <ul>
                                            <li><a href="{{ path('procesos_procesos',{ 'idMacroproceso' : procedimiento.id } ) }}">
                                                    <i class="fa fa-eye"></i>Ver Procesos</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
{% endblock %}
