{% extends 'base.html.twig' %}

{% block content %}


<div class="row">

    <div class="col-md-6 offset-md-3" >
        <div class="card" >
            <img class="img-fluid card-img-top"  src="/bundles/procesos/images/l-t.png"  alt="Club Tijuana Xoloitzcuintles de Caliente">

            <div class="card-body">

                <h5 class="card-title">
                    <strong>Administraci&oacute;n de Procesos</strong>
                    {%  if error  %}
                    <span class="danger-color">{{ error.getMessageKey }}</span>
                    {% endif %}
                </h5>

                <form  method="post">
                    {% if  csrf_token('authenticate')  %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    {% endif %}

                    <div class="form-group">
                        <div>
                            <label for="username">{{ 'security.login.username'|trans({}, 'messages') }}</label>
                        </div>

                        <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </span>
                            <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            <label for="password">{{ 'security.login.password'|trans({}, 'messages') }}</label>
                        </div>
                        <div class="input-group">
                            <span class="input-group-addon">
                                <i class="fa fa-lock" aria-hidden="true"></i>
                            </span>
                            <input type="password" name="password" id="inputPassword" class="form-control" required>
                        </div>
                    </div>
{#                    <div class="form-group">#}
{#                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />#}
{#                        <label class="remember_me" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>#}
{#                    </div>#}
                    <div class="form-group">
                        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Iniciar Sesi&oacute;n">
                    </div>

                </form>

                <p class="card-text">Sistema de solicitudes para Club Tijuana Xoloitcuintles de Caliente.</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">SCP- Sistema de control de Procesos</small>
            </div>

        </div>


    </div>

{% endblock %}
