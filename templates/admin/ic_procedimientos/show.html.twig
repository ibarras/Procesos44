{% extends 'base.html.twig' %}

{% block content %}


<div class="row">
    <div class="col-sm-10">
        <div class="card">
            <div class="card-header">
                <h4>Procedimiento:fff <strong>{{ procedimiento.title }}</strong> Del Proceso: <strong>{{ procedimiento.IdProcesos.title }}</strong></h4>
            </div>
            <div class="card-body">
                {{ procedimiento.descripcion | raw }}
                <div class="card-footer">

                    {% if instructivo is empty %}
                        <a type="button" class="btn btn-primary btn-md"
                           href="{{ path('procesos_instruccion_agregar', {'idProcedimiento': procedimiento.id }) }}">
                            Agregar Instruccion de Trabajo
                        </a>
                    {% else %}

                        <a type="button" class="btn btn-primary btn-md"
                           href="{{ path('procesos_instruccion_mostrar', {'idInstructivo': instructivo.id }) }}">
                            Instruccion de Trabajo
                        </a>

                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}