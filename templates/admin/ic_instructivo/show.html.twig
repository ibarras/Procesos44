{% extends 'base.html.twig' %}

{% block title %}Instructivo de Trabajo{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-10">
            <div class="card">
                <div class="card-header">
                    <h4>Instructivo: <strong>{{ instructivo.title }}</strong></h4>
                </div>
                <div class="card-body">
                    {{ instructivo.descripcion | raw }}
                    <div class="card-footer">
                        {% if instructivo.idSolicitud is not empty %}

                            <h4>Este instructivo tiene un formulario para completar</h4>
                            <br/>
                            <h5>{{ instructivo.idSolicitud.nombre }}</h5>

                            <a href="{{ path('procesos_instructivo_agregar', {'id': instructivo.id }) }}"
                               class="btn btn-primary btn-md" >Fomulario de Solicitud</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
