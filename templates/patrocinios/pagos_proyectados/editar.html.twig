{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-12">
            <div class="card mt-4 my-2">
                <div class="card-body">
                    <h4 class="card-title">Editar Pago Proyectado</h4>
                    {{ form_start(form) }}
                    <div class="md-form mb-5">
                        {{ form_widget(form.idPatrocinador) }}
                    </div>
                    <div class="form-row">
                        <div class="form-group md-form col-md-6">
                            <label for="inputfechaPagoProyectado">Fecha de Pago Proyectado</label>
                            {{ form_widget(form.fechaPagoProyectado) }}
                        </div>
                        <div class="form-group md-form col-md-6">
                            <label for="inputfechaLimitePago">Fecha Limite de Pago</label>
                            {{ form_widget(form.fechaLimitePago) }}
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12 md-form">
                            <label for="inputCorreo">Monto</label>
                            {{ form_widget(form.monto) }}
                        </div>
                    </div>
                    <button class="btn btn-light" onClick="window.history.back();" type="button">Cancelar</button>
                    <button type="submit" class="btn btn-primary float-right">Editar</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}