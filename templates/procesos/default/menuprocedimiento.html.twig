{% extends 'layout.html.twig' %}


{% block content %}

    <style>

        .card{ margin-top: 20px;}
    </style>


    <div class="row">
        {% for procedimiento in procedimientos %}
        <div class="col-md-4">
            <!-- Card Dark -->
            <div class="card">

                <!-- Card image -->
                <div class="view overlay">
                    <img class="card-img-top" src="https://mdbootstrap.com/img/Photos/Horizontal/Work/4-col/img%20%2821%29.jpg"
                         alt="Card image cap">
                    <a>
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>

                <!-- Card content -->
                <div class="card-body elegant-color white-text rounded-bottom">

                    <!-- Social shares button -->
                    <a class="activator waves-effect mr-4"><i class="fas fa-share-alt white-text"></i></a>
                    <!-- Title -->
                    <h4 class="card-title">{{ procedimiento.title }}</h4>
                    <hr class="hr-light">
                    <!-- Text -->
                    <!-- Link -->
                    <a href="{{ path('public_procedimiento_procedimiento', { 'id': procedimiento.id , 'nombre': procedimiento.title |slugTitle }) }}" class="white-text d-flex justify-content-end">
                        <h5>Ver Procedimiento<i class="fas fa-angle-double-right"></i></h5>
                    </a>

                </div>

            </div>
            <!-- Card Dark -->
        </div>
        {% endfor %}
    </div>


{% endblock %}
