{% extends 'layout.html.twig' %}

{% block content %}


<div class="row">
    <div class="col-sm-10">
        <div class="card">
            <div class="card-header">
                <h4>Instruccion de Trabajo: <strong>{{ instruccion.title }}</strong></h4>
            </div>
            <div class="card-body">
                {{ instruccion.descripcion | raw }}

                <div class="card-footer">

                    {% if instructivo is not empty %}

                        <a href="{{ path('public_instructivo_mostrar', {'iDescripcion': instructivo.id }) }}"
                           class="btn btn-primary btn-md" > Ver Instructivo</a>

                    {% endif %}
            
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}